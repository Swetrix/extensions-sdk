{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module": "es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "sourceMap": true,
    "declaration": false,
    "outDir": "dist/lib",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "tslib" : ["node_modules/tslib/tslib.d.ts"],
    },
    "baseUrl": "."
  },
  "include": ["src"]
}
